<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry
        location="E:\code\java\jar\mysql-connector-java-5.1.46.jar"/>

    <context id ="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">
        <property name="autoDelimitKeywords" value="false"/>
        <property name="javaFormater" value="org.mybatis.generator.api.dom.DefaultJavaFormatter"/>
        <property name="xmlFormater" value="org.mybatis.generator.api.dom.DefaultXmlFormatter"/>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/verify"
                        userId="root"
                        password="123456"/>


    <javaModelGenerator targetPackage="com.tyy.mybatis.pojo"
        targetProject="./src/main/java">
        <property name="enableSubPackages" value="false"/>
        <property name="constructorBased" value="true"/>
        <property name="trimSettings" value="true"/>
    </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper.xml"
                         targetProject="./src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <javaClientGenerator targetPackage="com.tyy.mybatis.mapper"
                             targetProject="./src/main/java" type="XMLMAPPER">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <table tableName="student" domainObjectName="Student">
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>
    </context>
</generatorConfiguration>